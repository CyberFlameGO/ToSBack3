<h1><%= @policy.name %></h1>
<h3>Updated on <%= @policy.created_at.to_date.to_formatted_s(:long) %></h3>
<div class="row">
	<div class="span3">
		<div id="policy_sites">
			<h4>Belongs to:</h4>
			<%= render 'shared/list_each_as_link', list_object: @sites, ul_class: "sites" %>
			<%= will_paginate @sites, param_name: 'site_page' %>
		</div>
		<div id="policy_versions">
			<h4>View version from:</h4>
			<ul class="versions">
				<% @versions.each do |v| %>
					<li><%= link_to v.created_at.to_date.to_formatted_s(:long), policy_version_path(@policy,v.id) %></li>
				<% end %>
			</ul>
			<%= link_to "View all versions...", policy_versions_path(@policy) %>
		</div>
	</div>
	<div class="span9">
		<div id="policy_current">
			<%= @policy.detail.html_safe %>
		</div>
	</div>
</div>
